# Biogas Analytics Platform - Environment Configuration
# Copy this file to .env and update values as needed

# Database
DATABASE_URL=sqlite:///instance/biogas.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=5001
DEBUG=False

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Cache
CACHE_TTL_SECONDS=300

# ML Models
USE_GPU=False

# Data Processing
CHUNK_SIZE=100000
MAX_WORKERS=4

# Anomaly Detection Thresholds
ANOMALY_CH4_MIN=65.0
ANOMALY_CH4_MAX=80.0
ANOMALY_PRESSURE_MIN=15.0
ANOMALY_PRESSURE_MAX=200.0
ANOMALY_TEMP_MAX_DELTA=10.0
ANOMALY_MOTOR_CURRENT_MAX_DEVIATION=20.0

# Alert Settings
ALERT_RETENTION_DAYS=90
